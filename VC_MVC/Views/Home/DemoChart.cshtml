
@model ChartModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <title>Chart.js examples</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.js"></script>
</head>
<body>
    <h1> Pie chart example</h1>

    <canvas id="piechartexample" width="300" height="250"></canvas>

    <script>
    new Chart(document.getElementById("piechartexample"), {
      type: '@Model.Charts[0].ChartType',
      data: {
        labels: [@Html.Raw(@Model.Charts[0].Labels)],
        datasets: [
          {
            label: "Older Population (millions)",
            backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9", "#c45850"],
            data: [@Model.Charts[0].Data]
          }
        ]
      },
      options: {
        legend: { display: false },
        title: {
          display: true,
          text: '@Model.Charts[0].Title'
        }
      }
    });

    </script>
    <br/>
    <h1> Bar chart example</h1>

    <canvas id="barchartexample" width="300" height="250"></canvas>

    <script>
    new Chart(document.getElementById("Barchartexample"), {
      type: '@Model.Charts[1].ChartType',
      data: {
        labels: [@Html.Raw(@Model.Charts[1].Labels)],
        datasets: [
          {
            label: "Population (millions)",
            backgroundColor: ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9", "#c45850"],
            data: [@Model.Charts[1].Data]
          }
        ]
      },
      options: {
        legend: { display: false },
        title: {
          display: true,
          text: '@Model.Charts[1].Title'
        }
      }
    });
    </script>
</body>
</html>